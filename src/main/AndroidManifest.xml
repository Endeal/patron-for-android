<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="me.endeal.patron"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="10"
        android:targetSdkVersion="22" />

	<!-- Permissions -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="com.google.android.c2dm.permission.RECEIVE" />
	<permission android:name="me.endeal.patron.permission.C2D_MESSAGE" android:protectionLevel="signature" />
	<uses-permission android:name="me.endeal.patron.permission.C2D_MESSAGE" />
    <uses-permission android:name="android.permission.VIBRATE"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.READ_LOGS" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.USE_CREDENTIALS" />

    <application
        android:icon="@drawable/logo_app"
        android:name="me.endeal.patron.system.Patron"
        android:allowClearUserData="true"
        android:enabled="true"
        android:label="@string/appName"
        android:allowBackup="true">

        <!-- API Keys -->
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/appId"/>

        <!-- Intent Receivers -->
        <receiver android:name="me.endeal.patron.system.FlashIntentReceiver" android:exported="false">
            <intent-filter>
                <action android:name="me.endeal.patron.intent.APPBOY_PUSH_RECEIVED" />
                <action android:name="me.endeal.patron.intent.APPBOY_NOTIFICATION_OPENED" />
            </intent-filter>
        </receiver>

        <!-- Appsee -->
        <service android:name="com.appsee.AppseeBackgroundUploader" />

        <!-- Appboy -->
        <receiver android:name="com.appboy.AppboyGcmReceiver" android:permission="com.google.android.c2dm.permission.SEND">
            <intent-filter>
                <action android:name="com.google.android.c2dm.intent.RECEIVE" />
                <action android:name="com.google.android.c2dm.intent.REGISTRATION" />
                <category android:name="me.endeal.patron" />
            </intent-filter>
        </receiver>

        <!-- The Login Screen Activity -->
        <activity
            android:name="me.endeal.patron.main.FlashLogin"
            android:label="@string/appName"
            android:theme="@style/ThemeMain"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan">
            <intent-filter android:label="@string/appName">
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Vouchers Screen Activity -->
        <activity
            android:name="me.endeal.patron.main.FlashVouchers"
            android:label="@string/titleActivityVouchers"
            android:theme="@style/ThemeMain"
            android:screenOrientation="portrait"
            android:parentActivityName="me.endeal.patron.main.FlashLogin">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="me.endeal.patron.main.FlashLogin" />
        </activity>

        <!-- The Create Account Screen Activity -->
        <activity
            android:name="me.endeal.patron.main.FlashCreateAccount"
            android:label="@string/titleActivityCreateAccount"
            android:theme="@style/ThemeMain"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan"
            android:parentActivityName="me.endeal.patron.main.FlashLogin">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="me.endeal.patron.main.FlashLogin" />
        </activity>

        <!-- The Add Card Screen Activity -->
        <activity
            android:name="me.endeal.patron.main.FlashAddCard"
            android:label="@string/titleActivityAddCard"
            android:theme="@style/ThemeMain"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan"
            android:parentActivityName="me.endeal.patron.main.FlashPayment">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="me.endeal.patron.main.FlashSettings" />
        </activity>

        <!-- The Menu Screen Activity -->
        <activity
            android:name="me.endeal.patron.main.FlashMenu"
            android:label="@string/titleActivityMenu"
            android:theme="@style/ThemeMain"
            android:screenOrientation="portrait">
        </activity>

        <!-- The Cart Screen Activity -->
        <activity
            android:name="me.endeal.patron.main.FlashCart"
            android:label="@string/titleActivityCart"
            android:theme="@style/ThemeMain"
            android:screenOrientation="portrait"
            android:parentActivityName="me.endeal.patron.main.FlashMenu">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="me.endeal.patron.main.FlashMenu" />
        </activity>

        <!-- The Vendors Screen Activity -->
        <activity
            android:name="me.endeal.patron.main.FlashVendors"
            android:label="@string/titleActivityLocations"
            android:theme="@style/ThemeMain"
            android:screenOrientation="portrait"
            android:parentActivityName="me.endeal.patron.main.FlashMenu">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="me.endeal.patron.main.FlashMenu" />
        </activity>

        <!-- The Orders Screen Activity -->
        <activity
            android:name="me.endeal.patron.main.FlashOrders"
            android:label="@string/titleActivityOrders"
            android:theme="@style/ThemeMain"
            android:screenOrientation="portrait">
        </activity>

        <!-- The Scan Screen Activity -->
        <activity
            android:name="me.endeal.patron.main.FlashScan"
            android:label="@string/titleActivityScan"
            android:theme="@style/ThemeMain"
            android:screenOrientation="portrait"
            android:parentActivityName="me.endeal.patron.main.FlashCodes">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="me.endeal.patron.main.FlashOrders" />
        </activity>

        <!-- The Settings Activity -->
        <activity
            android:name="me.endeal.patron.main.FlashSettings"
            android:label="@string/titleActivitySettings"
            android:theme="@style/ThemeMain"
            android:screenOrientation="portrait"
            android:parentActivityName="me.endeal.patron.main.FlashHome">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="me.endeal.patron.main.FlashHome" />
        </activity>

        <!-- The Facebook Login Activity -->
        <activity
            android:name="com.facebook.LoginActivity"
            android:label="@string/titleActivityFacebook"
            android:theme="@android:style/Theme.Translucent.NoTitleBar"
            android:screenOrientation="portrait"
            android:parentActivityName="me.endeal.patron.main.FlashLogin">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="me.endeal.patron.main.FlashLogin" />
        </activity>

        <!-- The Twitter Login Activity -->
        <activity
            android:name="com.twitter.sdk.android.core.identity.OAuthActivity"
            android:label="@string/titleActivityTwitter"
            android:theme="@style/ThemeMain"
            android:screenOrientation="portrait"
            android:parentActivityName="me.endeal.patron.main.FlashLogin">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="me.endeal.patron.main.FlashLogin" />
        </activity>

        <!-- The Twitter Share E-mail Activity -->
        <activity
            android:name="com.twitter.sdk.android.core.identity.ShareEmailActivity"
            android:label="@string/titleActivityTwitterShareEmail"
            android:theme="@style/ThemeMain"
            android:screenOrientation="portrait"
            android:parentActivityName="me.endeal.patron.main.FlashLogin">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="me.endeal.patron.main.FlashLogin" />
        </activity>

    </application>

</manifest>

<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="appTitle">
        <item name="android:textColor">@color/title</item>
        <item name="android:textSize">@dimen/appTitleTextSize</item>
        <item name="fontPath">fonts/Roboto-Bold.ttf</item>
    </style>
    <style name="title">
        <item name="android:textColor">@color/title</item>
        <item name="android:textSize">@dimen/labelTextSize</item>
        <item name="fontPath">fonts/Roboto-Regular.ttf</item>
    </style>
    <style name="subtitle">
        <item name="android:textColor">@color/subtitle</item>
        <item name="android:textSize">@dimen/subtitleTextSize</item>
        <item name="fontPath">fonts/Roboto-Regular.ttf</item>
    </style>
    <style name="label">
        <item name="android:textColor">@color/label</item>
        <item name="android:textSize">@dimen/labelTextSize</item>
        <item name="fontPath">fonts/Roboto-Regular.ttf</item>
    </style>
    <style name="price">
        <item name="android:textColor">@color/price</item>
        <item name="android:textSize">@dimen/labelTextSize</item>
        <item name="fontPath">fonts/Roboto-Regular.ttf</item>
    </style>
    <style name="locale">
        <item name="android:textColor">@color/label</item>
        <item name="android:textSize">@dimen/localeTextSize</item>
        <item name="fontPath">fonts/Roboto-Regular.ttf</item>
    </style>
    <style name="raisedButton">
        <item name="android:textColor">@color/title</item>
        <item name="android:textSize">@dimen/raisedButtonTextSize</item>
        <item name="android:elevation">@dimen/raisedButtonElevation</item>
        <item name="fontPath">fonts/Roboto-Bold.ttf</item>
    </style>
    <style name="flatButton" parent="android:Widget.Material.Button.Borderless">
        <item name="android:textColor">@color/accent</item>
        <item name="android:textSize">@dimen/raisedButtonTextSize</item>
        <item name="fontPath">fonts/Roboto-Bold.ttf</item>
    </style>
    <style name="lightEditText">
        <item name="fontPath">fonts/Roboto-Regular.ttf</item>
        <item name="android:textColor">@color/title</item>
        <item name="android:textColorHint">@color/placeholder</item>
        <item name="android:textSize">@dimen/labelTextSize</item>
        <item name="colorControlActivated">@color/accent</item>
        <item name="colorControlHighlight">@color/accent</item>
    </style>
    <style name="darkEditText">
        <item name="fontPath">fonts/Roboto-Regular.ttf</item>
        <item name="android:textColor">@color/label</item>
        <item name="android:textColorHint">@color/darkPlaceholder</item>
        <item name="android:textSize">@dimen/labelTextSize</item>
        <item name="colorControlActivated">@color/accent</item>
        <item name="colorControlHighlight">@color/accent</item>
    </style>
    <style name="drawerArrow" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@color/title</item>
    </style>
    <style name="dialog" parent="@android:style/Theme.DeviceDefault.Dialog">
    </style>
    <style name="toolbar">
        <item name="android:background">@color/primary</item>
        <item name="android:minHeight">@dimen/toolbarHeight</item>
    </style>
    <style name="menu" parent="Widget.AppCompat.PopupMenu.Overflow">
        <item name="overlapAnchor">true</item>
        <item name="android:overlapAnchor">true</item>
    </style>

</resources>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/LayoutMain"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/dialogStationsTextViewTitle"
        style="@style/TextViewTitleSmall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Select where you want to pick up this order" />

    <ListView
        android:id="@+id/dialogStationsListMain"
        style="@style/ListViewMain"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </ListView>

    <Button
    	android:id="@+id/dialogStationsButtonCancel"
        style="@style/ButtonMain"
        android:text="@string/dialogStationButtonCancel"
    	android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>

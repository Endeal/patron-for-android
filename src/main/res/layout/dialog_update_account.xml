<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/LayoutMain"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
    	android:id="@+id/dialogUpdateAccountTextViewTitle"
        style="@style/TextViewTitleSmall"
    	android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:gravity="center_horizontal"
    	android:text="Enter your new login details" />

    <EditText
    	android:id="@+id/dialogUpdateAccountEditTextEmail"
        style="@style/EditTextMainEmail"
        android:hint="New login e-mail"
    	android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
    	android:id="@+id/dialogUpdateAccountEditTextPassword"
        style="@style/EditTextMainPassword"
        android:hint="New login password"
    	android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
    	android:id="@+id/dialogUpdateAccountButtonDone"
        style="@style/ButtonMain"
    	android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:layout_margin="5dp"
        android:text="Submit" />

</LinearLayout>

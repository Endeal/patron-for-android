<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="250dp"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/dialogVendorRelativeLayoutTop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/dialogVendorImageViewPicture"
            android:scaleType="centerCrop"
            android:background="@color/background"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignBottom="@+id/dialogVendorLinearLayoutControls"
            android:layout_toLeftOf="@+id/dialogVendorLinearLayoutControls"/>

        <LinearLayout
            android:id="@+id/dialogVendorLinearLayoutControls"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/dialogVendorImageButtonFavorite"
                style="@style/flatButton"
                android:tint="@color/favorite"
                android:layout_width="@dimen/actionIconSize"
                android:layout_height="@dimen/actionIconSize"
                android:layout_margin="5dp"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_favorite_border_white_48dp" />

            <ImageButton
                android:id="@+id/dialogVendorImageButtonContact"
                style="@style/flatButton"
                android:tint="@color/contact"
                android:layout_width="@dimen/actionIconSize"
                android:layout_height="@dimen/actionIconSize"
                android:layout_margin="5dp"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_message_black_48dp" />

            <ImageButton
                android:id="@+id/dialogVendorImageButtonNavigate"
                style="@style/flatButton"
                android:tint="@color/navigate"
                android:layout_width="@dimen/actionIconSize"
                android:layout_height="@dimen/actionIconSize"
                android:layout_margin="5dp"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_navigation_black_48dp" />

        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/dialogVendorTextViewTitle"
            style="@style/label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"/>

        <TextView
            android:id="@+id/dialogVendorTextViewDescription"
            style="@style/subtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"/>

    </LinearLayout>

    <Button
        android:id="@+id/dialogVendorButtonSelect"
        style="@style/flatButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:text="Select Vendor" />

</LinearLayout>

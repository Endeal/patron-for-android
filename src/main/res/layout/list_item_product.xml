<?xml version="1.0" encoding="utf-8"?>

<!-- Defining a container for List Item-->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/productListItemLayout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:descendantFocusability="blocksDescendants" >

<!-- First Row -->
<LinearLayout
  android:id="@+id/productListItemLinearLayoutMiddle"
  android:orientation="vertical"
  android:layout_toRightOf="@+id/productListItemToggleButtonFavorite"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:layout_centerVertical="true">

    <TextView
        android:id="@+id/productListItemTextName"
        style="@style/TextViewListItemName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp" />

    <Button
      android:id="@+id/productListItemButtonSupplements"
      style="@style/ButtonSupplements"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginLeft="10dp"
      android:layout_marginBottom="10dp" />

  </LinearLayout>

<Spinner
    android:id="@+id/productListItemSpinnerQuantity"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentTop="true"
    android:layout_toLeftOf="@+id/productListItemTextPrice"
    android:layout_marginTop="10dp"
    android:entries="@array/array_quantity" />

<TextView
    android:id="@+id/productListItemTextPrice"
    style="@style/TextViewListItemPrice"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentRight="true"
    android:layout_alignParentTop="true"
    android:layout_margin="10dip" />

<!-- Center Row -->

<ToggleButton
    android:id="@+id/productListItemToggleButtonFavorite"
    style="@style/StyleProductListItemToggleButtonFavorite"
    android:layout_width="@dimen/dimProductListItemToggleButtonFavoriteWidth"
    android:layout_height="@dimen/dimProductListItemToggleButtonFavoriteHeight"
    android:layout_alignParentLeft="true"
    android:layout_centerVertical="true"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="5dp"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp" />

<!-- Bottom Row -->

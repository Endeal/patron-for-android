<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:foreground="?selectableItemBackground"
    android:background="?android:attr/selectableItemBackground">

    <ImageView
        android:id="@+id/viewHolderOrderImageViewStatus"
        android:layout_width="@dimen/statusSize"
        android:layout_height="@dimen/statusSize"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_margin="10dp" />

    <LinearLayout
        android:id="@+id/viewHolderOrderLinearLayoutText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/viewHolderOrderImageViewStatus"
        android:layout_toLeftOf="@+id/viewHolderOrderImageViewRetrieval"
        android:layout_centerVertical="true"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/viewHolderOrderTextViewTitle"
            style="@style/label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/viewHolderOrderTextViewSubtitle"
            style="@style/subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/viewHolderOrderImageViewRetrieval"
        android:layout_width="@dimen/retrievalSize"
        android:layout_height="@dimen/retrievalSize"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_margin="10dp" />

</RelativeLayout>

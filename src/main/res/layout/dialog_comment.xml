<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/LayoutMain"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
    	android:id="@+id/dialogCommentTextTitle"
        style="@style/TextViewTitleSmall"
    	android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:gravity="center_horizontal"
    	android:text="Optionally enter a comment to be sent with your order to the vendor." />

    <EditText
    	android:id="@+id/dialogCommentFieldComment"
        style="@style/EditTextMessage"
        android:hint="@string/dialogCommentEditTextMessage"
    	android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
    	android:id="@+id/dialogCommentButtonDone"
        style="@style/ButtonMain"
    	android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:layout_margin="5dp"
        android:text="@string/dialogCommentButtonDone" />

</LinearLayout>

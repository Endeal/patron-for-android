<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
    	android:id="@+id/dialogCommentTextTitle"
    	android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:gravity="center_horizontal"
    	android:text="Optionally enter a comment to be sent with your order to the vendor." />

    <EditText
    	android:id="@+id/dialogCommentFieldComment"
    	android:layout_width="match_parent"
    	android:layout_height="wrap_content"
        android:maxLength="300"
    	android:hint="Max 300 characters..." />

    <Button
    	android:id="@+id/dialogCommentButtonDone"
    	android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:layout_margin="5dp"
    	android:text="Done" />

</LinearLayout>
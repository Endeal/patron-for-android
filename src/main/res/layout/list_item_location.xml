<?xml version="1.0" encoding="utf-8"?>
<!-- Defining a container for you List Item-->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

<!-- First Row -->

<ToggleButton
    android:id="@+id/locationListItemToggleButtonFavorite"
    style="@style/StyleLocationListItemToggleButtonFavorite"
    android:layout_width="@dimen/dimProductListItemToggleButtonFavoriteWidth"
    android:layout_height="@dimen/dimProductListItemToggleButtonFavoriteHeight"
    android:layout_alignParentLeft="true"
    android:layout_centerVertical="true"
    android:layout_margin="5dip"
    android:focusable="false" />

<TextView
    android:id="@+id/locationListItemTextName"
    style="@style/TextViewListItemName"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_toRightOf="@+id/locationListItemToggleButtonFavorite"
    android:layout_alignParentTop="true"
    android:layout_margin="10dip" />

<TextView
    android:id="@+id/locationListItemTextPhone"
    style="@style/TextViewListItemPhone"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentRight="true"
    android:layout_alignParentTop="true"
    android:layout_margin="10dip" />

<!-- Second Row -->

<TextView
    android:id="@+id/locationListItemTextAddress"
    style="@style/TextViewListItemDescription"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_toRightOf="@+id/locationListItemToggleButtonFavorite"
    android:layout_below="@+id/locationListItemTextName"
    android:layout_marginLeft="10dp"
    android:layout_marginBottom="10dp" />

</RelativeLayout>

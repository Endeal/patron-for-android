<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/settingsDrawerNavigation"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/settingsLayoutMain"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <!-- Settings Text -->

            <TextView
                android:id="@+id/settingsTextLocate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_margin="10dp"
                android:text="@string/settingsTextLocate" />

            <TextView
                android:id="@+id/settingsTextFacebookPublishOrder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/settingsTextLocate"
                android:layout_margin="10dp"
                android:text="@string/settingsTextFacebookPublishOrder" />

            <TextView
                android:id="@+id/settingsTextNetworkFacebook"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/settingsTextFacebookPublishOrder"
                android:layout_margin="10dp"
                android:text="@string/settingsTextNetworkFacebook" />

            <TextView
                android:id="@+id/settingsTextNetworkTwitter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/settingsTextNetworkFacebook"
                android:layout_margin="10dp"
                android:text="@string/settingsTextNetworkTwitter" />

            <TextView
                android:id="@+id/settingsTextNetworkGooglePlus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/settingsTextNetworkTwitter"
                android:layout_margin="10dp"
                android:text="@string/settingsTextNetworkGooglePlus" />

            <!-- Settings Checkboxes -->

            <CheckBox
                android:id="@+id/settingsCheckboxLocate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignBaseline="@+id/settingsTextLocate"
                android:layout_margin="10dp" />

            <CheckBox
                android:id="@+id/settingsCheckboxFacebookPublishOrder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignBaseline="@+id/settingsTextFacebookPublishOrder"
                android:layout_margin="10dp"/>

            <Button
                android:id="@+id/settingsButtonNetworkFacebook"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignBaseline="@+id/settingsTextNetworkFacebook"
                android:layout_margin="10dp"
                android:text="@string/settingsButtonNetworkConnect" />

            <Button
                android:id="@+id/settingsButtonNetworkTwitter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignBaseline="@+id/settingsTextNetworkTwitter"
                android:layout_margin="10dp"
                android:text="@string/settingsButtonNetworkConnect" />

            <Button
                android:id="@+id/settingsButtonNetworkGooglePlus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignBaseline="@+id/settingsTextNetworkGooglePlus"
                android:layout_margin="10dp"
                android:text="@string/settingsButtonNetworkConnect"/>

            <!-- Cards and Bank Accounts -->
            <LinearLayout
                android:id="@+id/settingsLinearLayoutFunders"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/settingsTextNetworkGooglePlus"
                android:orientation="horizontal"
                android:weightSum="2" >

                <Button
                    android:id="@+id/settingsButtonAddCard"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/settingsButtonAddCard" />

                <Button
                    android:id="@+id/settingsButtonAddBankAccount"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/settingsButtonAddBankAccount" />

            </LinearLayout>

            <ListView
                android:id="@+id/settingsListViewFunders"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/settingsLinearLayoutFunders"
                android:layout_above="@+id/settingsButtonLogout" />

            <Button
                android:id="@+id/settingsButtonLogout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_margin="10dp"
                android:text="@string/settingsButtonLogout" />

        </RelativeLayout>

    <!-- The navigation drawer -->
    <com.patron.view.NavigationListView
        android:id="@+id/settingsListNavigation"
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:choiceMode="singleChoice"
        android:divider="@android:color/transparent"
        android:dividerHeight="0dp"
        android:background="#111"/>

</android.support.v4.widget.DrawerLayout>

<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/menuDrawerNavigation"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/menuLayoutContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <!-- The main list of items -->
        <android.support.v4.widget.SwipeRefreshLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/menuSwipeRefreshLayoutItems"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ListView
                android:id="@+id/menuListItems"
                style="@style/StyleMenuListItems"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_alignParentTop="true"
                android:layout_above="@+id/menuHorizontalScrollViewTypes" >
            </ListView>

        </android.support.v4.widget.SwipeRefreshLayout>

        <Button
            android:id="@+id/menuButtonSelectVendor"
            style="@style/ButtonQuickReturn"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentTop="true"
            android:elevation="5dp"
            android:text="@string/menuButtonSelectVendor" />

        <!-- The checkout button -->
        <Button
            android:id="@+id/menuButtonCheckout"
            style="@style/ButtonCheckout"
            android:text="@string/menuButtonCheckout"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true" />

        <!-- Search Input -->
        <EditText
            android:id="@+id/menuEditTextSearch"
            style="@style/EditTextMessage"
            android:visibility="gone"
            android:background="#77114025"
            android:hint="e.g. water..."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_above="@+id/menuHorizontalScrollViewTypes" />

        <!-- The scroll view for the categories -->
        <HorizontalScrollView
            android:id="@+id/menuHorizontalScrollViewTypes"
            style="@style/LayoutCategories"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_toLeftOf="@+id/menuButtonCheckout" >

            <LinearLayout
                android:id="@+id/menuLayoutTypes"
                style="@style/LayoutTransparent"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal" >

                <!-- The buttons for selecting each drink type -->
                <com.patron.view.ButtonSearch
                    android:id="@+id/menuButtonSearch"
                    style="@style/ButtonSearch"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:layout_margin="10dp" />

                <com.patron.view.ButtonFavorites
                    android:id="@+id/menuButtonFavorites"
                    style="@style/ButtonFavorites"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:layout_margin="10dp" />

                </LinearLayout>

        </HorizontalScrollView>

    </RelativeLayout>

    <!-- The navigation drawer -->
    <com.patron.view.NavigationListView
        android:id="@+id/menuListNavigation"
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:choiceMode="singleChoice"
        android:divider="@android:color/transparent"
        android:dividerHeight="0dp"
        android:background="#111"/>

</android.support.v4.widget.DrawerLayout>

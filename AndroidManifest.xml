<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.flashvip.main"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="19" />
    
    <!-- PayPal Permissions -->
        <!-- for card.io card scanning -->
    <uses-permission android:name="android.permission.CAMERA" />
        <!-- for most things, including card.io and paypal -->
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
        <!-- Camera features -->
    <uses-feature android:name="android.hardware.camera" android:required="false" />
    <uses-feature android:name="android.hardware.camera.autofocus" android:required="false" />
    <uses-feature android:name="android.hardware.camera.flash" android:required="false" />
    
    <!-- Urban Airship -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.VIBRATE"/>
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="com.google.android.c2dm.permission.RECEIVE" />
    <permission android:name="com.flashvip.main.permission.C2D_MESSAGE" android:protectionLevel="signature" />
    <uses-permission android:name="com.flashvip.main.permission.C2D_MESSAGE" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    
    <!-- OPTIONAL - This permission is only necessary if your app has multiple processes -->
    <uses-permission android:name="android.permission.BROADCAST_STICKY" />
    <!-- END OPTIONAL Urban Airship Settings -->
    
    <application
        android:icon="@drawable/ic_menu_beer"
        android:name="com.flashvip.system.FlashApplication"
        android:allowClearUserData="true"
        android:enabled="true"
        android:label="@string/app_title"
        android:allowBackup="true">
        
        <!-- Intent Receivers -->
        <receiver android:name="com.urbanairship.CoreReceiver" />  
        <receiver android:name="com.flashvip.system.FlashIntentReceiver" />
        
        <!-- PayPal Activities -->
        <service android:name="com.paypal.android.sdk.payments.PayPalService" android:exported="false"/>
        <activity android:name="com.paypal.android.sdk.payments.PaymentActivity" />
        <activity android:name="com.paypal.android.sdk.payments.LoginActivity" />
        <activity android:name="com.paypal.android.sdk.payments.PaymentMethodActivity" />
        <activity android:name="com.paypal.android.sdk.payments.PaymentConfirmActivity" />
        <activity
            android:name="io.card.payment.CardIOActivity"
            android:configChanges="keyboardHidden|orientation" />
        <activity android:name="io.card.payment.DataEntryActivity" />

        <!-- The Home Screen Activity -->
        <activity
            android:name="com.flashvip.main.FlashHome"
            android:label="@string/titleActivityHome"
            android:theme="@style/Theme.AppCompat.Light"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
         <!-- The Login Screen Activity -->
        <activity
            android:name="com.flashvip.main.FlashLogin"
            android:label="@string/titleActivityLogin"
            android:theme="@style/Theme.AppCompat.Light"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <!-- The Menu Screen Activity -->
        <activity
            android:name="com.flashvip.main.FlashMenu"
            android:label="@string/titleActivityMenu"
            android:theme="@style/Theme.AppCompat.Light"
            android:screenOrientation="portrait"
            android:parentActivityName="com.flashvip.main.FlashHome">
            
            <meta-data 
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.flashvip.main.FlashClient" />
        </activity>
        
        <!-- The Cart Screen Activity -->
        <activity
            android:name="com.flashvip.main.FlashCart"
            android:label="@string/titleActivityCart"
            android:theme="@style/Theme.AppCompat.Light"
            android:screenOrientation="portrait"
            android:parentActivityName="com.flashvip.main.FlashMenu">
            <meta-data 
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.flashvip.main.FlashMenu" />
        </activity>
        
        <!-- The Vendors Screen Activity -->
        <activity
            android:name="com.flashvip.main.FlashVendors"
            android:label="@string/titleActivityLocations"
            android:theme="@style/Theme.AppCompat.Light"
            android:screenOrientation="portrait"
            android:parentActivityName="com.flashvip.main.FlashHome">
            <meta-data 
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.flashvip.main.FlashClient" />
        </activity>
        
        <!-- The Codes Screen Activity -->
        <activity
            android:name="com.flashvip.main.FlashCodes"
            android:label="@string/titleActivityCodes"
            android:theme="@style/Theme.AppCompat.Light"
            android:screenOrientation="portrait"
            android:parentActivityName="com.flashvip.main.FlashHome">
            <meta-data 
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.flashvip.main.FlashClient" />
        </activity>
        
        <!-- The Scan Screen Activity -->
        <activity
            android:name="com.flashvip.main.FlashScan"
            android:label="@string/titleActivityScan"
            android:theme="@style/Theme.AppCompat.Light"
            android:screenOrientation="portrait"
            android:parentActivityName="com.flashvip.main.FlashCodes">
            <meta-data 
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.flashvip.main.FlashClient" />
        </activity>
        
        <!-- The Search Vendors Activity -->
        <activity
            android:name="com.flashvip.main.FlashSearchVendors"
            android:label="@string/titleActivitySearchVendors"
            android:theme="@style/Theme.AppCompat.Light"
            android:screenOrientation="portrait"
            android:parentActivityName="com.flashvip.main.FlashVendors">
            <meta-data 
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.flashvip.main.FlashClient" />
        </activity>
        
        <!-- The Search Items Activity -->
        <activity
            android:name="com.flashvip.main.FlashSearchItems"
            android:label="@string/titleActivitySearchItems"
            android:theme="@style/Theme.AppCompat.Light"
            android:screenOrientation="portrait"
            android:parentActivityName="com.flashvip.main.FlashMenu">
            <meta-data 
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.flashvip.main.FlashClient" />
        </activity>
        
        <!-- The Settings Activity -->
        <activity
            android:name="com.flashvip.main.FlashSettings"
            android:label="@string/titleActivitySettings"
            android:theme="@style/Theme.AppCompat.Light"
            android:screenOrientation="portrait"
            android:parentActivityName="com.flashvip.main.FlashHome">
            <meta-data 
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.flashvip.main.FlashClient" />
        </activity>
        
        <!-- The Help Activity -->
        <activity
            android:name="com.flashvip.main.FlashHelp"
            android:label="@string/titleActivityHelp"
            android:theme="@style/Theme.AppCompat.Light"
            android:screenOrientation="portrait"
            android:parentActivityName="com.flashvip.main.FlashHome">
            <meta-data 
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.flashvip.main.FlashClient" />
        </activity>
        
        <!-- Urban Airship GCM receivers -->
        <receiver android:name="com.urbanairship.CoreReceiver" />
        <receiver android:name="com.urbanairship.push.GCMPushReceiver"
            android:permission="com.google.android.c2dm.permission.SEND">
            <intent-filter>
                <action android:name="com.google.android.c2dm.intent.RECEIVE" />
                <action android:name="com.google.android.c2dm.intent.REGISTRATION" />
                <category android:name="com.flashvip.main" />
            </intent-filter>
            <!-- REQUIRED for detecting when the application is upgraded so it can request a new GCM ID -->
            <intent-filter>
                <action android:name="android.intent.action.PACKAGE_REPLACED" />
                <data android:scheme="package"/>
            </intent-filter>
        </receiver>
        
        <service android:name="com.urbanairship.push.PushService"
            android:label="Push Notification Service"/>
        <service android:name="com.urbanairship.analytics.EventService"
            android:label="Event Service"/>
        
        <!-- This is required for persisting preferences related to push and location -->
        <!-- 
        <provider android:name="com.urbanairship.UrbanAirshipProvider"
            android:authorities="com.flashvip.main.urbanairship.provider"
            android:exported="true"
            android:multiprocess="true" />
            -->
        
        <!-- OPTIONAL (for segments support) -->
        <service android:name="com.urbanairship.location.LocationService" android:label="Segments Service"/>
        
        <!-- OPTIONAL, if you want to receive push, push opened and registration completed intents -->
        <!-- Replace the receiver below with your package and class name -->
        <receiver android:name="com.flashvip.system.NotificationsReceiver" />
        
    </application>

</manifest>
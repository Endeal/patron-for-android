<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

  <!-- Application Settings -->
  <modelVersion>4.0.0</modelVersion>
  <groupId>com.patron.main</groupId>
  <artifactId>Patron</artifactId>
  <version>1.0.0</version>
  <packaging>apk</packaging>
  <name>Patron</name>

  <repositories>
    <repository>
        <id>android-support</id>
        <url>file://${env.ANDROID_HOME}\extras\android\m2repository</url>
    </repository>
    <repository>
      <id>fabric-repo</id>
      <url>https://maven.fabric.io/repo</url>
    </repository>
  </repositories>

  <pluginRepositories>
    <pluginRepository>
      <id>crashlytics-plugin-repo</id>
      <url>http://download.crashlytics.com/maven</url>
    </pluginRepository>
  </pluginRepositories>

  <dependencies>

    <!-- Urban Airship Android SDK -->
    <dependency>
      <groupId>com.patron</groupId>
      <artifactId>urban-airship</artifactId>
      <version>4.0.1</version>
    </dependency>

    <!-- Bolts Android SDK -->
    <dependency>
      <groupId>com.patron</groupId>
      <artifactId>bolts-android</artifactId>
      <version>1.1.3</version>
    </dependency>

    <!-- Parse Android SDK -->
    <dependency>
      <groupId>com.patron</groupId>
      <artifactId>Parse</artifactId>
      <version>1.7.1</version>
    </dependency>

    <!-- Socialauth Android SDK -->
    <dependency>
      <groupId>com.patron</groupId>
      <artifactId>socialauth-android</artifactId>
      <version>3.2</version>
    </dependency>

    <!-- Socialauth SDK -->
    <dependency>
      <groupId>com.patron</groupId>
      <artifactId>socialauth</artifactId>
      <version>4.4</version>
    </dependency>

    <!-- Balanced Payments Android SDK -->
    <dependency>
      <groupId>com.balancedpayments.android</groupId>
      <artifactId>balanced-android-parent</artifactId>
      <version>1.1-SNAPSHOT</version>
      <type>apklib</type>
    </dependency>

    <!-- GSON -->
    <dependency>
      <groupId>com.google.code.gson</groupId>
      <artifactId>gson</artifactId>
      <version>2.3</version>
    </dependency>

    <!-- Universal Image Loader -->
    <dependency>
      <groupId>com.nostra13.universalimageloader</groupId>
      <artifactId>universal-image-loader</artifactId>
      <version>1.9.3</version>
    </dependency>

    <!-- Crashlytics Kit -->
    <dependency>
      <groupId>com.crashlytics.sdk.android</groupId>
      <artifactId>crashlytics</artifactId>
      <version>2.0.1</version>
      <scope>compile</scope>
      <type>aar</type>
    </dependency>

    <!-- Twitter Kit -->
    <dependency>
      <groupId>com.twitter.sdk.android</groupId>
      <artifactId>twitter</artifactId>
      <version>1.0.1</version>
      <scope>compile</scope>
      <type>aar</type>
      <!-- We recommend providing your own support library using: -->
      <!-- https://github.com/mosabua/maven-android-sdk-deployer -->
      <exclusions>
        <exclusion>
          <groupId>com.android.support</groupId>
          <artifactId>support-v4</artifactId>
        </exclusion>
      </exclusions>
    </dependency>

    <!-- MoPub Kit -->
    <dependency>
      <groupId>com.mopub.sdk.android</groupId>
      <artifactId>mopub</artifactId>
      <version>3.2.2</version>
      <scope>compile</scope>
      <type>aar</type>
      <!-- We recommend providing your own support library using: -->
      <!-- https://github.com/mosabua/maven-android-sdk-deployer -->
      <exclusions>
        <exclusion>
          <groupId>com.android.support</groupId>
          <artifactId>support-v4</artifactId>
        </exclusion>
      </exclusions>
    </dependency>

    <!-- Android -->
    <dependency>
      <groupId>com.google.android</groupId>
      <artifactId>android</artifactId>
      <version>4.1.1.4</version>
      <scope>provided</scope>
    </dependency>

    <!-- Android Support Libraries -->
    <dependency>
      <groupId>com.android.support</groupId>
      <artifactId>support-v4</artifactId>
      <version>21.0.2</version>
      <type>aar</type>
      <exclusions>
        <exclusion>
          <groupId>org.apache.httpcomponents</groupId>
          <artifactId>httpclient</artifactId>
        </exclusion>
      </exclusions>
    </dependency>

    <dependency>
      <groupId>com.android.support</groupId>
      <artifactId>appcompat-v7</artifactId>
      <version>21.0.2</version>
      <type>aar</type>
      <exclusions>
        <exclusion>
          <groupId>org.apache.httpcomponents</groupId>
          <artifactId>httpclient</artifactId>
        </exclusion>
        <exclusion>
          <groupId>com.android.support</groupId>
          <artifactId>support-v4</artifactId>
        </exclusion>
      </exclusions>
    </dependency>

</dependencies>

<build>
  <finalName>${project.artifactId}</finalName>
  <sourceDirectory>src</sourceDirectory>
  <pluginManagement>
   <plugins>

   <!-- Android Maven Plugin -->
   <plugin>
    <groupId>com.jayway.maven.plugins.android.generation2</groupId>
    <artifactId>android-maven-plugin</artifactId>
    <version>3.9.0-rc.3</version>
    <extensions>true</extensions>
  </plugin>

</plugins>
</pluginManagement>
<plugins>

  <!-- Android Maven Plugin Configuration -->
 <plugin>
  <groupId>com.jayway.maven.plugins.android.generation2</groupId>
  <artifactId>android-maven-plugin</artifactId>
  <configuration>
   <sdk>
    <!-- platform or api level (api level 4 = platform 1.6) -->
    <platform>21</platform>
  </sdk>
</configuration>
</plugin>


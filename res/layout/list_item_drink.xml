<?xml version="1.0" encoding="utf-8"?>
<!-- Defining a container for you List Item-->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/black"
    android:gravity="center_vertical" >

<!-- First Row -->

<ImageButton
    android:id="@+id/imgbut_add"
    android:contentDescription="@string/condes_imgbut_add"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentLeft="true"
    android:layout_alignParentTop="true"
    android:src="@android:drawable/ic_input_add" />

<TextView
    android:id="@+id/text_name"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="4dip"
    android:layout_alignParentTop="true"
    android:layout_toRightOf="@+id/imgbut_add"
    android:text="@string/app_title"
    android:textColor="@color/white"
    android:textSize="@dimen/ListItemSize" />

<TextView
    android:id="@+id/text_alcohol"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginRight="16dip"
    android:layout_toLeftOf="@+id/text_price"
    android:layout_alignParentTop="true"
    android:text="@string/app_title" />

<TextView
    android:id="@+id/text_price"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentTop="true"
    android:layout_alignParentRight="true"
    android:text="@string/app_title" />

<!-- Bottom Row -->

<Spinner
    android:id="@+id/spinner_alcohol"
    style="@layout/spinner_alcohol_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentLeft="true"
    android:layout_below="@+id/imgbut_add"
    android:entries="@array/array_default_alcohols"
    android:focusable="false" />

<Spinner
    android:id="@+id/spinner_quantity"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="4dip"
    android:layout_toRightOf="@+id/spinner_alcohol"
    android:layout_alignParentBottom="true"
    android:entries="@array/array_quantity"
    android:focusable="false" />

<TextView
    android:id="@+id/text_type"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginRight="16dip"
    android:layout_toLeftOf="@+id/text_price"
    android:layout_below="@+id/text_alcohol"
    android:text="@string/app_title" />

<CheckBox
    android:id="@+id/cbox_favorite"
    style="@style/DarkTheme"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentRight="true"
    android:layout_alignParentBottom="true"
    android:focusable="false" />

</RelativeLayout>
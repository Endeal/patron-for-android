<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/layoutMenu"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <!-- The main list of items -->

        <ListView
            android:id="@+id/menuListItems"
            style="@style/StyleMenuListItems"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            android:layout_above="@+id/menuHorizontalScrollViewTypes" >
        </ListView>

        <!-- The checkout button -->
        <Button
            android:id="@+id/menuButtonCheckout"
            style="@style/StyleMenuButtonCheckout"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true" />

        <!-- The scroll view for the categories -->
        <HorizontalScrollView
            android:id="@+id/menuHorizontalScrollViewTypes"
            style="@style/StyleMenuHorizontalScrollViewTypes"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_toLeftOf="@+id/menuButtonCheckout" >

            <LinearLayout
                android:id="@+id/menuLayoutTypes"
                style="@style/StyleMenuLayoutTypes"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal" >

                <!-- The buttons for selecting each drink type -->
                <Button
                    android:id="@+id/menuButtonFavorites"
                    style="@style/StyleMenuButtonFavorites"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:layout_margin="10dp" />

                </LinearLayout>

        </HorizontalScrollView>

    </RelativeLayout>

    <!-- The navigation drawer -->
    <ListView android:id="@+id/menuListNavigation"
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:choiceMode="singleChoice"
        android:divider="@android:color/transparent"
        android:dividerHeight="0dp"
        android:background="#111"/>

</android.support.v4.widget.DrawerLayout>

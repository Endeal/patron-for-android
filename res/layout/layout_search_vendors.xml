<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/searchVendorsTextMain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignBaseline="@+id/searchVendorsEditTextMain"
        android:text="@string/searchVendorsTextMain" />

    <EditText
        android:id="@+id/searchVendorsEditTextMain"
        android:inputType="text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/searchVendorsTextMain"
        android:ems="10" >

        <requestFocus />
    </EditText>

    <ListView
        android:id="@+id/searchVendorsListMain"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/searchVendorsEditTextMain" >
    </ListView>

</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>

<!-- Defining a container for List Item-->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

<!-- First Row -->

<TextView
    android:id="@+id/cartListItemTextName"
    style="@style/StyleCartListItemTextName"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentTop="true"
    android:layout_margin="10dip"
    android:layout_toRightOf="@+id/cartListItemButtonRemove" />

<TextView
    android:id="@+id/cartListItemTextPrice"
    style="@style/StyleCartListItemTextPrice"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentRight="true"
    android:layout_alignParentTop="true"
    android:layout_margin="10dip" />

<!-- Center Row -->

<Button
    android:id="@+id/cartListItemButtonRemove"
    style="@style/StyleCartListItemButtonRemove"
    android:layout_width="@dimen/dimCartListItemButtonRemoveWidth"
    android:layout_height="@dimen/dimCartListItemButtonRemoveHeight"
    android:layout_alignParentLeft="true"
    android:layout_centerVertical="true"
    android:layout_margin="5dip" />

<!-- Bottom Row -->

<TextView
    android:id="@+id/cartListItemTextType"
    style="@style/StyleCartListItemTextType"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_toRightOf="@+id/cartListItemButtonRemove"
    android:layout_below="@+id/cartListItemTextName"
    android:layout_marginLeft="10dip" />

<TextView
    android:id="@+id/cartListItemTextAlcohol"
    style="@style/StyleCartListItemTextAlcohol"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_toRightOf="@+id/cartListItemButtonRemove"
    android:layout_below="@+id/cartListItemTextType"
    android:layout_marginLeft="10dip"
    android:layout_marginBottom="10dip" />

<Spinner
    android:id="@+id/cartListItemSpinnerAlcohol"
    style="@layout/spinner_alcohol_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_toLeftOf="@+id/cartListItemSpinnerQuantity"
    android:layout_below="@+id/cartListItemTextPrice" />

<Spinner 
    android:id="@+id/cartListItemSpinnerQuantity"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentRight="true"
    android:layout_below="@+id/cartListItemTextPrice"
    android:entries="@array/array_quantity" />

</RelativeLayout>
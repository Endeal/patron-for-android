<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <!-- The Linear Layout containing the
        User and Server images. -->
    <LinearLayout
        android:id="@+id/layoutProfilePictures"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/imageProfileUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="24dp"
            android:layout_weight="1"
            android:contentDescription="@string/profileImageDescriptionUser"
            android:src="@drawable/ic_default_profile_user_selected" />

        <ImageView
            android:id="@+id/imageProfileServer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="24dp"
            android:layout_marginTop="24dp"
            android:layout_weight="1"
            android:contentDescription="@string/profileImageDescriptionServer"
            android:src="@drawable/ic_default_profile_server_selected" />
    </LinearLayout>

    <!-- The Linear Layout containing the text for the
        User & Server names. -->
    <LinearLayout
        android:id="@+id/layoutProfileText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layoutProfilePictures"
        android:layout_marginBottom="12dp"
        android:layout_marginTop="12dp"
        android:weightSum="2" >

        <TextView
            android:id="@+id/textUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="@string/profileTextUser"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/textServer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="12dp"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="@string/profileTextServer"
            android:textAppearance="?android:attr/textAppearanceMedium" />
    </LinearLayout>

    <!-- The Linear Layout containing the
        buttons for Menu, Cart, Codes, & Favorites -->
    <LinearLayout
        android:id="@+id/layoutProfileButtons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layoutProfileText"
        android:weightSum="4" >

        <Button
            android:id="@+id/buttonProfileMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:background="@drawable/mainbutton"
            android:text="@string/profileButtonMenu" />

        <Button
            android:id="@+id/buttonProfileCart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:text="@string/profileButtonCart" />

        <Button
            android:id="@+id/buttonProfileCodes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:text="@string/profileButtonCodes" />

        <Button
            android:id="@+id/buttonProfileFavorites"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:text="@string/profileButtonFavorites" />
    </LinearLayout>

</RelativeLayout>